<!DOCTYPE html>
<html>

<head>
  <meta charset='utf-8'>
  <meta http-equiv='X-UA-Compatible' content='IE=edge'>
  <title>Home</title>
  <meta name='viewport' content='width=device-width, initial-scale=1'>
  <link rel='stylesheet' type='text/css' media='screen' href='display-create/home.css'>
  <link rel="stylesheet" href="display-create/navbar.css">
  <link rel="stylesheet" href="display-create/styles.css">
</head>

<body>
  <div class="topnav">
    <a class="active" href="/">Home</a>
    <a href="/create">Create</a>
  </div>
  <div>
    <table>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Email</th>
        <th>City</th>
        <th>Action</th>
      </tr>
      <%for(let i=0; i<listUser.length ; i++) {%>
        <tr>
          <td>
            <%=listUser[i].id%>
          </td>
          <td>
            <%=listUser[i].name%>
          </td>
          <td>
            <%=listUser[i].email%>
          </td>
          <td>
            <%=listUser[i].city%>
          </td>
          <td><button><a href="/edit/<%=listUser[i].id%>">Edit</a></button></td>
          <td>
            <!-- <button>
              <a href="/delete?id=<%=listUser[i].id%>">Delete</a>
            </button> -->
            <form action="/delete/<%=listUser[i].id%>" method="post">
              <button>Delete</button>
            </form>
          </td>
        </tr>
        <%}%>
    </table>
  </div>
</body>

</html>